nav.navbar.navbar-default.navbar-fixed-top class=(namespace==:admin ? 'navbar-inverse' : '')
  .container
    .navbar-header
      button.navbar-toggle.collapsed aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" type="button"
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      = link_to app_title, (namespace == :admin ? admin_root_path : root_path), class: 'navbar-brand'
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav
        = yield

      /- if logged_in?
        /ul.nav.navbar-nav.navbar-right
          /li.dropdown
            /= link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' }, role: :button, 'aria-haspopup' => true, 'aria-expanded' => false do
              /= ion_icon :user, text: current_user.email
              /.m-l-sm.span.caret
            /ul.dropdown-menu
              /li= link_to t('.exit'), main_app.sessions_path, method: :delete
