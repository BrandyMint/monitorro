= search_form_for [:admin, q], builder: SimpleForm::FormBuilder, html: { class: 'form-inline' } do |f|
  = f.input :name_or_code_cont, label: false, placeholder: 'Поиск по названию или коду', as: :string
  = f.submit 'Найти', class: 'btn btn-primary'
  span.m-l-md= link_to 'Сбросить', admin_payment_systems_path if params[:q].present?
