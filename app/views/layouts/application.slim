doctype html
html
  head
    title= app_title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  body
    .container
      = render 'header'
    .container style='margin-top: 80px'
      .row
        .col-md-3
          = render 'sidebar'
        .col-md-9
          = yield
