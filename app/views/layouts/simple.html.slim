doctype html
html
  head
    title= app_title
    = csrf_meta_tags
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  body
    .container
      .row
        .col-md-4.col-md-offset-4
          h1.m-b-md= app_title
          = noty_flashes
          = yield

          .m-t-md
          hr
          .text-muted= "#{app_title} #{AppVersion} #{Rails.env}"
